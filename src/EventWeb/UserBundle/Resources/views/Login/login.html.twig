{% extends '::base.html.twig' %}

{% block body %}
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}
<div class="row">
    <div class="col-md-4">
        <form action="{{ path('login_check') }}" method="post" class='form-signin'>
            <h2 class="form-signin-heading">
                Please sign in
            </h2>
            <label class="sr-only" for="username">Username</label>
            <input class='form-control' type="text" id="username" name="_username" value="{{ last_username }}"  placeholder="Username or Email address" />
            
            <label class="sr-only" for="password"></label>
            <input class='form-control' type="password" id="password" name="_password" placeholder="Password" />

            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <hr />
            <button class="btn btn-lg btn-primary btn-block" type="submit">login</button>
        </form>
    </div>
</div>
{% endblock %}