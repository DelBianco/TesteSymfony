{% extends 'EventFormBundle::sidebar.html.twig' %}
{% block main -%}
        <h1>Evento list</h1>
        <table class='table table-striped'>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Inicio</th>
                    <th>Fim</th>
                    <th>Cidade</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('evento_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.nome }}</td>
                    <td>{% if entity.inicio %}{{ entity.inicio|date(' d - M - Y ') }}{% endif %}</td>
                    <td>{% if entity.fim %}{{ entity.fim|date(' d - M - Y ') }}{% endif %}</td>
                    <td>{{ entity.cidade }}</td>
                    <td>{{ entity.email }}</td>
                    <td>{{ entity.telefone }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('evento_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('evento_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

            <ul>
            <li>
                <a href="{{ path('evento_new') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
{% endblock %}